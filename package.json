{
  "name": "syniad",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "build": "tsc",
    "build:lambda": "bash scripts/build-lambda.sh",
    "typecheck": "tsc --noEmit",
    "test": "node scripts/check-test-auth.js && jest --verbose",
    "test:watch": "node scripts/check-test-auth.js && jest --watch --verbose",
    "test:api": "node scripts/check-test-auth.js && jest --testPathPattern=api-tests --verbose",
    "test:api:watch": "node scripts/check-test-auth.js && jest --testPathPattern=api-tests --watch --verbose",
    "dev": "npm run build && node scripts/local-server.js",
    "terraform:init": "cd terraform && terraform init",
    "terraform:plan": "cd terraform && terraform plan",
    "terraform:apply": "cd terraform && terraform apply",
    "terraform:destroy": "cd terraform && terraform destroy",
    "terraform:output": "cd terraform && terraform output",
    "terraform:workspace": "cd terraform && terraform workspace",
    "workspace:dev": "cd terraform && terraform workspace select dev || terraform workspace new dev",
    "workspace:prod": "cd terraform && terraform workspace select prod || terraform workspace new prod",
    "deploy": "npm run build:lambda && cd terraform && terraform workspace select dev && terraform apply -var='stage=dev' -auto-approve",
    "deploy:dev": "npm run build:lambda && npm run workspace:dev && cd terraform && terraform apply -var='stage=dev' -auto-approve",
    "deploy:prod": "npm run build:lambda && npm run workspace:prod && cd terraform && terraform apply -var='stage=prod' -auto-approve"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.922.0",
    "@aws-sdk/lib-dynamodb": "^3.922.0",
    "aws-jwt-verify": "^5.1.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.157",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.9.2",
    "@types/uuid": "^9.0.8",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.9.3"
  }
}
